<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="OneDotView">
        <!-- Initial score -->
        <attr name="odvScore" format="integer"/>
        <!-- Thumb radius for smashing -->
        <attr name="odvThumbRadius" format="dimension"/>
        <!-- Surface color (same effect than android:background) -->
        <attr name="odvSurface" format="color|reference"/>
        <!-- Render and log boolean values -->
        <attr name="odvDebug" format="boolean"/>
    </declare-styleable>

</resources>